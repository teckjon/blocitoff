 <div class="row">
   <div class="col-md-8">
     <div class="media">
       <br />
       <% avatar_url = User.avatar_url(current_user, 128) %>
       <% unless avatar_url.nil? %>
         <div class="media-left">
           <%= image_tag avatar_url, class: 'media-object' %>
         </div>
       <% end %>
       <div class="media-body">
         <h2 class="media-heading"><%= current_user.email %></h2>
       </div>
     </div>
   </div>
 </div>